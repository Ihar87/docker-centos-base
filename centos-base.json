{
    "variables": {
        "version": ""
    },
    "builders":[{
        "type": "docker",
        "image": "centos",
        "pull": true,
        "export_path": "centos-base.tar"
    }],
    "provisioners":[
        {
            "type": "ansible-local",
            "playbook_file": "local.yml",
            "role_paths":[
                "roles/common"
            ]
        }
    ],
    "post-processors": [
        {
            "type": "docker-import",
            "repository": "mohitarora/centos-base",
            "tag": "{{user `version`}}"
        },
        "docker-push"
    ]
}